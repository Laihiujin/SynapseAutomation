{
  "name": "SynapseAutomation",
  "version": "1.1.0",
  "description": "SynapseAutomation",
  "main": "src/main/index.js",
  "author": "Laihiujin",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env SYNAPSE_START_SERVICES=1 SYNAPSE_START_FRONTEND=1 electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.synapse.automation",
    "productName": "SynapseAutomation",
    "asar": true,
    "asarUnpack": [
      "src/renderer/**",
      "src/preload/**"
    ],
    "directories": {
      "output": "dist-build",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "../build/supervisor",
        "to": "supervisor",
        "filter": [
          "supervisor.exe"
        ]
      },
      {
        "from": "../synenv",
        "to": "synenv",
        "filter": [
          "**/*",
          "!**/nul"
        ]
      },
      {
        "from": "../browsers",
        "to": "browsers",
        "filter": [
          "**/*",
          "!**/nul"
        ]
      },
      {
        "from": "../syn_backend",
        "to": "syn_backend",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/test_*",
          "!**/tests",
          "!**/.pytest_cache",
          "!**/data/cookies/**",
          "!**/cookiesFile/**",
          "!**/fingerprints/**",
          "!**/browser_profiles/**",
          "!**/videoFile/**",
          "!**/logs/**",
          "!**/db/*.db",
          "!**/db/*.db-*",
          "!**/db/*.sqlite",
          "!**/db/*.sqlite-*",
          "!**/db/frontend_accounts_snapshot.json",
          "!**/backups/**",
          "!**/nul"
        ]
      },
      {
        "from": "../syn_frontend_react/.next/standalone",
        "to": "frontend/standalone",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../syn_frontend_react/.next/static",
        "to": "frontend/standalone/.next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../syn_frontend_react/public",
        "to": "frontend/standalone/public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../.env",
        "to": ".env"
      },
      {
        "from": "resources/redis",
        "to": "redis",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "publisherName": "laihiujin",
      "legalTrademarks": "laihiujin",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "include": "build/installer.nsh",
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SynapseAutomation",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "compression": "normal",
    "electronVersion": "28.0.0"
  }
}
