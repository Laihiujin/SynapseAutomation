# ===============================
# Synapse Automation 环境配置
# ===============================

# ===============================
# 浏览器统一配置（全平台适用）
# ===============================

# 是否启用无头模式 (服务器/Docker 必须为 true)
# true: 无头模式（后台运行，无 GUI）
# false: 有头模式（显示浏览器窗口，用于调试）
PLAYWRIGHT_HEADLESS=true

# Mac 本地开发 Chrome 路径（可选，自动 fallback）
# 如果未设置，将自动查找默认安装路径
LOCAL_CHROME_PATH_MAC=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# Windows 本地开发 Chrome 路径（可选，自动 fallback）
# 如果未设置，将自动查找默认安装路径
LOCAL_CHROME_PATH_WIN=C:/Program Files/Google/Chrome/Application/chrome.exe

# Linux 系统 Chromium 路径（可选，自动 fallback）
# 如果未设置，将自动查找系统安装的 chromium
LOCAL_CHROME_PATH_LINUX=/usr/bin/chromium-browser

# ===============================
# 推荐配置（生产环境）
# ===============================
# 1. 安装 Playwright 浏览器（推荐）:
#    playwright install chromium
#
# 2. Playwright 浏览器会自动安装到:
#    Linux/Mac: ~/.cache/ms-playwright/chromium-*/
#    Windows: %USERPROFILE%\.cache\ms-playwright\chromium-*\
#
# 3. 系统会自动检测并优先使用 Playwright 浏览器
#    无需手动配置路径
#
# 4. 优先级顺序:
#    Playwright 浏览器 > 系统 Chrome > 环境变量指定路径

# ===============================
# 数据库配置
# ===============================
DB_PATH_REL=db/database.db

# MySQL（可选；启用后需要逐步迁移代码到 SQLAlchemy/Alembic）
# DATABASE_URL=mysql+pymysql://synapse:synapse@localhost:3306/synapse?charset=utf8mb4

# ===============================
# 服务器配置
# ===============================
FLASK_PORT=5409
FLASK_HOST=0.0.0.0
FLASK_DEBUG=false

# ===============================
# 文件存储配置
# ===============================
UPLOAD_FOLDER=media/uploads
MAX_CONTENT_LENGTH=524288000

# ===============================
# Cookie 配置
# ===============================
COOKIE_DIR=cookiesFile
COOKIE_BACKUP_DIR=cookiesFile/backups

# ===============================
# 日志配置
# ===============================
LOG_LEVEL=INFO
LOG_DIR=logs

# ===============================
# AI 服务配置（可选）
# ===============================
# AI_BASE_URL=https://api.openai.com/v1
# AI_API_KEY=your_api_key_here
# AI_MODEL=gpt-4

# SiliconFlow / DeepSeek OCR（可选）
# SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
# SILICONFLOW_API_KEY=your_api_key_here
# DEEPSEEK_OCR_MODEL=deepseek-ai/DeepSeek-OCR
# SILICONFLOW_PROMPT_MODEL=Qwen/Qwen2.5-VL-72B-Instruct
# SILICONFLOW_IMAGE_MODEL=Qwen/Qwen-Image-Edit-2509

# Selenium 调试开关（可选）
# ENABLE_SELENIUM_DEBUG=false
# ENABLE_SELENIUM_RESCUE=false
# ENABLE_OCR_RESCUE=true

# ===============================
# Redis 配置（可选，用于任务队列）
# ===============================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Redis（统一 URL 写法；若设置，则可不填写上面的 host/port）
# REDIS_URL=redis://localhost:6379/0

# ===============================
# Celery 配置（可选，用于异步任务）
# ===============================
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===============================
# 安全配置
# ===============================
# SECRET_KEY=your_secret_key_here
# JWT_SECRET_KEY=your_jwt_secret_here

# ===============================
# CORS 配置
# ===============================
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===============================
# 其他配置
# ===============================
# TIMEZONE=Asia/Shanghai
# LANGUAGE=zh_CN
